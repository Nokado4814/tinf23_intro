generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String      @id @default(uuid())
  name      String
  passwordHash String
  createdTodos     Todo[]   @relation("ToDoCreator")
  assignedTodos    Todo[]   @relation("ToDoAssignee")
}

model Todo {
  id        Int      @id @default(autoincrement())
  title     String
  description String?
  dueDate   DateTime?
  creator   User     @relation("ToDoCreator", fields: [creatorId], references: [id])
  creatorId String
  assignee  User?    @relation("ToDoAssignee", fields: [assigneeId], references: [id])
  assigneeId String?
  completedOn DateTime?
}